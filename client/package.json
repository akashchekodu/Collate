{
  "name": "p2p-notebook-desktop",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:renderer && npm run build:electron && electron-builder",
    "build:electron": "tsc -p electron.tsconfig.json",
    "build:renderer": "tsc && vite build",
    "package": "npm run build:renderer && npm run build:electron && electron-builder",
    "package:dir": "npm run build:renderer && npm run build:electron && electron-builder --dir",
    "dist": "npm run package",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.4",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "yjs": "^13.6.8",
    "y-webrtc": "^10.2.5",
    "y-indexeddb": "^9.0.12",
    "y-prosemirror": "^1.2.1",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.32.4",
    "prosemirror-model": "^1.19.3",
    "prosemirror-schema-basic": "^1.2.2",
    "prosemirror-schema-list": "^1.3.0",
    "prosemirror-example-setup": "^1.2.2",
    "uuid": "^9.0.1",
    "dexie": "^3.2.4",
    "electron-store": "^8.1.0"
  }
}